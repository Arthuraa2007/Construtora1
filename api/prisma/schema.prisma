generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Secretario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  telefone  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("secretarios")
}

model Paciente {
  id             Int        @id @default(autoincrement())
  nome           String
  email          String     @unique
  cpf            String     @unique
  telefone       String?
  dataNascimento DateTime   @db.Date
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  consultas      Consulta[]

  @@map("pacientes")
}

model Medico {
  id            Int        @id @default(autoincrement())
  nome          String
  email         String     @unique
  crm           String     @unique
  especialidade String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  consultas     Consulta[]

  @@map("medicos")
}

model Consulta {
  id         Int      @id @default(autoincrement())
  dataHora   DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  pacienteId Int
  medicoId   Int
  imovelId   Int?   // üîπ chave estrangeira para Im√≥vel

  // Rela√ß√µes
  paciente   Paciente @relation(fields: [pacienteId], references: [id])
  medico     Medico   @relation(fields: [medicoId], references: [id])
  imovel     Imovel?  @relation(fields: [imovelId], references: [id])

  @@map("consultas")
}

model Imovel {
  id             Int        @id @default(autoincrement())
  nome           String
  endereco       String
  valor          Float
  descricao      String?
  dataConstrucao DateTime?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  consultas      Consulta[] // üîπ rela√ß√£o inversa: um im√≥vel pode ter v√°rias consultas
}
